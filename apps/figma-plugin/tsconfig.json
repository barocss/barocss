{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM"],
    "types": ["@figma/plugin-typings"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/components/*"],
      "@/lib": ["./src/lib/*"],
      "@/hooks": ["./src/hooks/*"],
      "@/types": ["./src/types/*"],
      "@/styles": ["./src/styles/*"]
    }
  },
  "include": ["src"]
}
